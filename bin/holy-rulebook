#!/bin/bash
set -e
cd "$(dirname "${0}")/.."

PATH="${PATH}:node_modules/.bin"
export NODE_ENV='local'

## Default task
task_default() {
  yarn install
  export NODE_ENV='production'
  node src/convert/convert.js > public/rulebook.json
  exec node --experimental-modules src/http/server.mjs "${@}"
}

## Development server
task_serve() {
  yarn install
  rm -rf public/bundles
  node src/convert/convert.js > public/rulebook.json
  exec node --experimental-modules src/http/server.mjs "${@}"
}

## Build the client bundle
task_build() {
  yarn install
  export NODE_ENV='production'
  exec webpack --progress
}

## Clean all build artifacts
task_clean() {
  rm -rf public/bundles node_modules yarn-error.log
  exit ${?}
}

## Convert HE2E to JSON
task_convert() {
  exec node src/convert/convert.js "${@}"
}

## Parse args
[[ ${1} == '--dev' ]] && task_serve
[[ ${1} == '--build' ]] && task_build
[[ ${1} == '--clean' ]] && task_clean
[[ ${1} == '--convert' ]] && task_convert

task_default
